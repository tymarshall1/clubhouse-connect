extends layout 
block content
    div(class='div-center')
        form(class="form-width flex-col w-full")
            h1(class='text-center mb-2 font-lg') Login
            label(for="email") Email
            input(type="email", required, placeholder="John@gmail.com", id="email", name="email", class="mb-xs")
            label(for="password") Password
            input(type="password", required, id="password", name="password", class="mb-xs") 
            p(class="mb-1") New here?  
                a(href="/users/create", class="clr-main") Create an account 
            button(class="bg-main") Login